<% if @pizza %>
  <h1>Reviews for <%= @pizza.name%> - <%= @pizza.company_name%></h1>
<% else %>
  <h1>All the Reviews </h1>
<% end %>

<ul>
<% @reviews.each do |review| %>

  <li>
    <%= @review.pizza.name%>: <%= link_to @review.title, review_path(review)%> - <%= @review.stars%>
  </li> <br>

<% end %>
</ul>