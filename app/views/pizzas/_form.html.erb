<%= render partial: 'errors', locals: {object: @pizza}  %>
<% form_for(@pizza) do |f|%>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>

  <p> Select a Company that already exists: </p>
  <div>
    <%= f.collection_select :company_id, Company.all, :id, :name, include_blank: 'Select One'%>

  </div>

  <p> Or create a new Company: </p>
  <div>
    <%=f.fields_for :company do |b| %>
      <%= b.label :name %>
      <%= b.text_field :name %>
    <% end %>
  </div>
  <br>
  <%= f.submit %>
<% end %>